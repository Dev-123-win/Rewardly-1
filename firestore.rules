rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read their own data and can only write to their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;

      // Enforce daily read and write limits
      function dailyLimits() {
        let today = request.time.date();
        let dailyStats = resource.data.dailyStats[today];
        return dailyStats.readsCount < 5 && dailyStats.writesCount < 3;
      }
    }

    // Users can only create new transactions and cannot modify or delete existing ones
    match /transactions/{transactionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Users can only create new referrals and cannot modify or delete existing ones
    match /referrals/{referralId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.referrerId || request.auth.uid == resource.data.refereeId);
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Users can only create new withdrawals and cannot modify or delete existing ones
    match /withdrawals/{withdrawalId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // All users can read the app config
    match /app_config/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
